<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <Button
            android:text="Persistente"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnBottomSheetBehavior"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btnBottomSheetDialogFragment"
            app:layout_constraintVertical_chainStyle="packed"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"/>

    <Button
            android:text="Modal Dialog Fragment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnBottomSheetDialogFragment"
            app:layout_constraintTop_toBottomOf="@+id/btnBottomSheetBehavior"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btnBottomSheetDialog"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>

    <Button
            android:text="Modal Dialog "
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnBottomSheetDialog"
            app:layout_constraintTop_toBottomOf="@+id/btnBottomSheetDialogFragment"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintBottom_toTopOf="@+id/btnBottomSheetFullScreen"/>

    <Button
            android:text="Modal Full-Screen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnBottomSheetFullScreen"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnBottomSheetDialog"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.455"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>